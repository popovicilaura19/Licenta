<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">

    <TextView
        android:id="@+id/id_tv_homePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="232dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="64dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="@color/light_green"/>

    <TextView
        android:id="@+id/id_tv_activeLoans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_active_loans"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="155dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tv_homePage"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal"
        android:textColor="@color/dark_green"/>

    <ListView
        android:id="@+id/id_lv_activeLoans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="175dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tv_activeLoans"/>

    <TextView
        android:id="@+id/id_tv_pendingLoans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pending_loans_arrange_meeting_with_agent_for_approval"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="237dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_lv_activeLoans"
        android:layout_marginTop="64dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal"
        android:textColor="@color/dark_green"/>

    <ListView
        android:id="@+id/id_lv_pendingLoans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="175dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tv_pendingLoans"/>

    <Button
        android:id="@+id/id_btn_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loan_quiz"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="420dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/id_btn_newLoanRequest"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/id_btn_newLoanRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_loan_request"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="643dp"
        app:layout_constraintStart_toEndOf="@id/id_btn_helper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>