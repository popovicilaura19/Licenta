<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoanRequestFormSecondActivity">

    <TextView
        android:id="@+id/id_tv_iban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iban"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/id_til_iban"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/id_til_iban"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="138dp"
        app:layout_constraintStart_toEndOf="@id/id_tv_iban"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="text"
            android:id="@+id/id_tiet_iban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/iban" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/id_tv_nrKids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_of_kids"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="278dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/id_til_nrKids"
        app:layout_constraintTop_toBottomOf="@id/id_tv_iban"
        android:layout_marginTop="100dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/id_til_nrKids"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="214dp"
        app:layout_constraintStart_toEndOf="@id/id_tv_nrKids"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_til_iban"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/id_tiet_nrKids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/number_of_kids" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/id_tv_familySituation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/family_situation"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="513dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/id_spn_familySituation"
        app:layout_constraintTop_toBottomOf="@id/id_tv_nrKids"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"/>

    <Spinner
        android:id="@+id/id_spn_familySituation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="623dp"
        app:layout_constraintStart_toEndOf="@id/id_tv_familySituation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_til_nrKids"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/id_btn_goNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="412dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="64dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>