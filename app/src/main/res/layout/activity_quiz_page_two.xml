<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizPageTwoActivity">

    <TextView
        android:id="@+id/id_question_material"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginTop="128dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/do_you_enjoy_spending_money_on_material_items_sometimes_even_luxury_goods"
        android:textColor="@color/dark_green"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/id_tv_material_yes"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/yes_i_like_to_indulge_and_have_fun"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/id_tv_material_no"
        app:layout_constraintTop_toBottomOf="@id/id_question_material"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/id_tv_material_no"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/no_i_usually_save_up_for_investing_money"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/id_tv_material_yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_question_material"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="316dp" />

    <CheckBox
        android:id="@+id/id_checkbox_materialYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="401dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/id_checkbox_materialNo"
        app:layout_constraintTop_toBottomOf="@id/id_tv_material_yes"
        android:layout_marginTop="32dp"/>

    <CheckBox
        android:id="@+id/id_checkbox_materialNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="369dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@id/id_checkbox_materialYes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tv_material_no"/>

    <ImageView
        android:id="@+id/id_img_shopping"
        android:layout_width="176dp"
        android:layout_height="262dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@id/id_img_investing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_checkbox_materialYes"
        app:srcCompat="@drawable/shopping" />

    <ImageView
        android:id="@+id/id_img_investing"
        android:layout_width="176dp"
        android:layout_height="262dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/id_img_shopping"
        app:layout_constraintTop_toBottomOf="@id/id_checkbox_materialNo"
        app:srcCompat="@drawable/investing" />

    <Button
        android:id="@+id/id_btn_quizTwo_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="@string/next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="579dp" />

</androidx.constraintlayout.widget.ConstraintLayout>