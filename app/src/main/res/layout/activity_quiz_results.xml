<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResultsActivity">

    <TextView
        android:id="@+id/id_tv_hereAreResults"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginTop="128dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/here_are_your_test_results_based_on_the_answears_provided_for_a_more_detailed_analysis_please_contact_us_for_a_visit_with_one_of_our_agents"
        android:textColor="@color/dark_green"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="116dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/id_tv_quizResultsMoreInfo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginTop="128dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/this_credit_solution_would_work_best_for_you_given_its_maximum_value_its_interest_rate_and_your_current_financial_situation_of_course_you_can_still_choose_any_other_credit_that_you_think_would_suit_you_best_make_the_choice_once_you_are_ready_we_are_always_here_to_help_though"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="329dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tv_hereAreResults"/>

    <ImageView
        android:id="@+id/id_img_quizResult"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/shopping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tv_quizResultsMoreInfo"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="326dp" />

    <CheckBox
        android:id="@+id/id_checkBox_yesSendMail_quizResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_send_quiz_results_via_email_as_well"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="558dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/id_btn_returnHome"
        android:layout_marginBottom="64dp"/>

    <Button
        android:id="@+id/id_btn_returnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="@string/return_home"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="586dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>